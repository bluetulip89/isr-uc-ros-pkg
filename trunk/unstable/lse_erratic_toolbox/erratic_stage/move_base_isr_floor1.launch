<launch>
  <master auto="start"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find isr_maps)/maps/isr_floor1.pgm 0.05"/>

  <!--- Run AMCL -->
  <include file="$(find erratic_stage)/params/amcl_erratic.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find erratic_stage)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find erratic_stage)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find erratic_stage)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find erratic_stage)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find erratic_stage)/params/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
